test:
    uv run pytest

# Generate API reference documentation for prefect-email
api-ref:
    #!/usr/bin/env bash
    REPO_ROOT="$(git rev-parse --show-toplevel)"
    cd "$REPO_ROOT"
    uvx --with-editable ./src/integrations/prefect-email \
        --python 3.12 \
        --isolated \
        mdxify \
        --all \
        --root-module prefect_email \
        --output-dir docs/integrations/prefect-email/api-ref \
        --anchor-name "prefect-email-sdk-reference" \
        --repo-url https://github.com/PrefectHQ/prefect \
        --include-inheritance
