test:
    uv run pytest

# Generate API reference documentation for prefect-shell
api-ref:
    #!/usr/bin/env bash
    REPO_ROOT="$(git rev-parse --show-toplevel)"
    cd "$REPO_ROOT"
    uvx --with-editable ./src/integrations/prefect-shell \
        --python 3.12 \
        --isolated \
        mdxify \
        --all \
        --root-module prefect_shell \
        --output-dir docs/integrations/prefect-shell/api-ref \
        --anchor-name "prefect-shell-sdk-reference" \
        --repo-url https://github.com/PrefectHQ/prefect \
        --include-inheritance
